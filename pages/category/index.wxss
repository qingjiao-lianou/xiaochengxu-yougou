/* pages/category/index.wxss */
.category_pages {
  height: calc( 100vh - 90rpx);
  display: flex;
}
.category_menu {
  flex: 1;
}
.category_menu .category_menu_title {
  display: flex;
  height: 80rpx;
  justify-content: center;
  align-items: center;
}
.native {
  color: var(--themeColor);
  border-left: red 2px solid;
}
.category_content {
  flex: 3;
}
.category_content .category_content_title {
  display: flex;
  height: 80rpx;
  justify-content: center;
  align-items: center;
}
.category_content .category_content_ground {
  display: flex;
  flex-wrap: wrap;
}
.category_content .category_content_ground .goods_item {
  width: 33.3%;
  text-align: center;
}
.category_content .category_content_ground .goods_item image {
  width: 60%;
}
