/* pages/cart/index.wxss */
button {
  margin: 20rpx 0;
}
.address_info {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  font-size: 28rpx;
  color: #666;
}
.cart_title {
  color: var(--themeColor);
  border-top: 1rpx solid currentColor;
  border-bottom: 1rpx solid currentColor;
  font-size: 36rpx;
  padding: 20rpx;
}
.cart_info {
  display: flex;
  border-bottom: 1rpx solid #ccc;
  padding: 5rpx 0;
}
.cart_info .cart_info_warp {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_info .goods_img {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_info .goods_img image {
  width: 80%;
}
.cart_info .goods_content {
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  overflow: hidden;
}
.cart_info .goods_content .goods_content_title {
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 30rpx;
}
.cart_info .goods_content .goods_number {
  display: flex;
  justify-content: space-between;
  padding: 10rpx;
}
.cart_info .goods_content .goods_number .goods_price {
  color: var(--themeColor);
  font-size: 36rpx;
}
.cart_info .goods_content .goods_number .goods_num {
  display: flex;
}
.cart_info .goods_content .goods_number .goods_num view {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 33rpx;
}
.cart_info .goods_content .goods_number .goods_num .goods_checkBox_num {
  border: 1rpx solid #ccc;
  width: 60rpx;
  height: 60rpx;
}
.cart_info .goods_content .goods_number .goods_num .goods_num_ber {
  margin: 0 20rpx;
}
.btm_cart {
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  position: fixed;
  left: 0;
  bottom: 0;
  border-top: 1rpx solid #ccc;
  display: flex;
}
.btm_cart .cart_all_wrap {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.btm_cart .total_price_wrap {
  text-align: right;
  padding: 5rpx;
  flex: 6;
}
.btm_cart .total_price_wrap .total_price1 text {
  font-weight: 600;
  font-size: 30rpx;
  color: var(--themeColor);
}
.btm_cart .cart_order {
  flex: 4;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  background-color: var(--themeColor);
  font-size: 600px;
  font-size: 34rpx;
}
